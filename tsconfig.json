{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "ES2020",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": true,
    "outDir": "./dist",
    "lib": ["es2021", "dom"],
    "rootDir": "./",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
